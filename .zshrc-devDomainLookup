function startDevRouter {
  docker network create --driver bridge devDomainRouter >/dev/null 2>&1
  docker run -d --name dnsmasq-dev-router --network=devDomainRouter -p 53535:53/tcp -p 53535:53/udp --restart always --cap-add=NET_ADMIN andyshinn/dnsmasq --address=/dev/127.0.0.1
  docker run -d --name nginx-proxy-dev-router --network=devDomainRouter -p 80:80 --restart always -v /var/run/docker.sock:/tmp/docker.sock:ro jwilder/nginx-proxy
}

function stopDevRouter {
  docker stop dnsmasq-dev-router nginx-proxy-dev-router
  docker rm dnsmasq-dev-router nginx-proxy-dev-router
}
